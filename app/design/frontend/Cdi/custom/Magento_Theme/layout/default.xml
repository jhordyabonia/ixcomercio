<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
	<!--
	<referenceBlock name="head">
		<block class="Magento\Theme\Block\Html\Head\Script" name="requirejs" before="-">
			<arguments>
				<argument name="file" xsi:type="string">requirejs/require.js</argument>
			</arguments>
		</block>
		<block class="Magento\RequireJs\Block\Html\Head\Config" name="requirejs-config" after="requirejs"/>
	</referenceBlock>
	-->
	<body>
		<container name="your.custom.name" as="your-custom" label="Your Label Name" htmlTag="div" htmlClass="your-class" htmlId="your-id" before="main.content"/>

		<!--parametriza el logo por defecto de la página-->
		<referenceBlock name="logo">
            <arguments>
                <argument name="logo_file" xsi:type="string">images/logo.svg</argument>
                <argument name="logo_img_width" xsi:type="number">160</argument>
                <argument name="logo_img_height" xsi:type="number">50</argument>
            </arguments>
        </referenceBlock>
		<!--Mueve el menú al header-->
		<move element="navigation.sections" destination="header.container" as="navigation.sections" after="-"/>
		<!--Elimina el contenedor de top links-->
		<referenceContainer name="header.container">
			<referenceBlock name="header.panel.wrapper" remove="true" />
		</referenceContainer>
		<!--Elimina el carrito y el buscador de la cabecera-->
		<referenceContainer name="header-wrapper">
			<referenceBlock name="minicart" remove="true" />
			<referenceBlock name="top.search" remove="true" />
		</referenceContainer>
		<!--Elimina breadcrumb-->
		<referenceBlock name="breadcrumbs" remove="true" />
		<!--Reemplaza el footer-->
		<referenceBlock name="footer-container" remove="true" />
		<container name="footer-container-custom" as="footer_custom" before="before.body.end" label="Page Footer Container" htmlTag="footer" htmlClass="footer-container"/>
		<referenceContainer name="footer-container-custom">
			<block class="Magento\Theme\Block\Html\Footer" name="footer" template="html/footer.phtml"/>
		</referenceContainer>
    </body>
</page>