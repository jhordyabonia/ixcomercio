<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
	<body>
		<!--parametriza el logo por defecto de la página-->
		<referenceBlock name="logo">
            <arguments>
                <argument name="logo_file" xsi:type="string">images/logo.svg</argument>
                <argument name="logo_img_width" xsi:type="number">160</argument>
                <argument name="logo_img_height" xsi:type="number">50</argument>
            </arguments>
        </referenceBlock>
		<!--Mueve el menú al header-->
		<move element="navigation.sections" destination="header.container" as="navigation.sections" after="-"/>
		<!--Elimina el contenedor de top links-->
		<referenceContainer name="header.container">
			<referenceBlock name="header.panel.wrapper" remove="false" />
			<container name="header.row.container.iconsearch" as="header_row_container_iconsearch" before="header.row.container.toplinks" htmlTag="div" htmlClass="icon-search">
				<block class="Magento\Framework\View\Element\Template" name="header.iconsearch.block" template="Magento_Theme::html/icon-search.phtml" cacheable="false"/>
			</container>
			<container name="header.row.container.toplinks" as="header_row_container_toplinks" after="header.row.container.iconsearch" htmlTag="div" htmlClass="header-toplinks">
				<block class="Magento\Framework\View\Element\Template" name="header.toplinks.block" template="Magento_Theme::html/toplinks.phtml" cacheable="false"/>
			</container>
			<move element="minicart" destination="header.row.container.toplinks" as="minicart" after="-"/>
			<move element="top.search" destination="header.wrapper" as="top.search" after="-"/>
		</referenceContainer>


		<!--Mueve bloques al header-->
		<move element="logo" destination="header.row.container.branding" as="logo" after="-"/>
		<move element="header.row.container.toplinks" destination="header.row.container.mainmenu" as="header.row.container.toplinks" before="-"/>
		<move element="header.icon.menu" destination="header.wrapper.mainmenu" as="menu.icon" before="-"/>
		<move element="navigation.sections" destination="header.wrapper.mainmenu" as="navigation.sections" after="header.icon.menu"/>
		<move element="header.row.container.iconsearch" destination="header.wrapper.mainmenu" as="search.icon" after="-"/>
		<move element="store_language" destination="header.row.container.toplinks" as="store_language" before="-"/>
		<move element="minicart" destination="header.row.container.toplinks" as="minicart" after="-"/>
		<move element="top.search" destination="header.wrapper" as="top.search" after="-"/>


		<referenceBlock name="store.settings" remove="true" />

		<!--Reemplaza el footer-->
		<referenceBlock name="footer-container" remove="true" />
		<container name="footer-container-custom" as="footer_custom" before="before.body.end" label="Page Footer Container" htmlTag="footer" htmlClass="footer-container"/>
		<referenceContainer name="footer-container-custom">
			<block class="Magento\Theme\Block\Html\Footer" name="footer.top" before="footer" template="Magento_Theme::html/footer_top.phtml"/>
			<block class="Magento\Theme\Block\Html\Footer" name="footer" after="footer.top" template="Magento_Theme::html/footer.phtml"/>
		</referenceContainer> 
    </body>
</page>