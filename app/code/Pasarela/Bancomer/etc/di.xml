<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <!-- Payment Method Facade configuration -->
    <virtualType name="BancomerFacade" type="Magento\Payment\Model\Method\Adapter">
        <arguments>
            <argument name="code" xsi:type="const">\Pasarela\Bancomer\Model\Ui\ConfigProvider::CODE</argument>
            <argument name="formBlockType" xsi:type="string">Magento\Payment\Block\Form</argument>
            <argument name="infoBlockType" xsi:type="string">Pasarela\Bancomer\Block\Info</argument>
            <argument name="valueHandlerPool" xsi:type="object">BancomerValueHandlerPool</argument>
            <argument name="commandPool" xsi:type="object">BancomerCommandPool</argument>
        </arguments>
    </virtualType>

    <!-- Configuration reader -->
    <virtualType name="BancomerConfig" type="Magento\Payment\Gateway\Config\Config">
        <arguments>
            <argument name="methodCode" xsi:type="const">\Pasarela\Bancomer\Model\Ui\ConfigProvider::CODE</argument>
        </arguments>
    </virtualType>

    <!-- Logger, initialized with BancomerConfig -->
    <virtualType name="BancomerLogger" type="Magento\Payment\Model\Method\Logger">
        <arguments>
            <argument name="config" xsi:type="object">BancomerConfig</argument>
        </arguments>
    </virtualType>

    <type name="Pasarela\Bancomer\Gateway\Http\Client\ClientMock">
        <arguments>
            <argument name="logger" xsi:type="object">BancomerLogger</argument>
        </arguments>
    </type>

    <!-- Commands infrastructure -->
    <virtualType name="BancomerCommandPool" type="Magento\Payment\Gateway\Command\CommandPool">
        <arguments>
            <argument name="commands" xsi:type="array">
                <item name="authorize" xsi:type="string">BancomerAuthorizeCommand</item>
                <item name="capture" xsi:type="string">BancomerCaptureCommand</item>
                <item name="void" xsi:type="string">BancomerVoidCommand</item>
            </argument>
        </arguments>
    </virtualType>

    <!-- Authorize command -->
    <virtualType name="BancomerAuthorizeCommand" type="Magento\Payment\Gateway\Command\GatewayCommand">
        <arguments>
            <argument name="requestBuilder" xsi:type="object">BancomerAuthorizationRequest</argument>
            <argument name="handler" xsi:type="object">BancomerResponseHandlerComposite</argument>
            <argument name="transferFactory" xsi:type="object">Pasarela\Bancomer\Gateway\Http\TransferFactory</argument>
            <argument name="client" xsi:type="object">Pasarela\Bancomer\Gateway\Http\Client\ClientMock</argument>
        </arguments>
    </virtualType>

    <!-- Authorization Request -->
    <virtualType name="BancomerAuthorizationRequest" type="Magento\Payment\Gateway\Request\BuilderComposite">
        <arguments>
            <argument name="builders" xsi:type="array">
                <item name="transaction" xsi:type="string">Pasarela\Bancomer\Gateway\Request\AuthorizationRequest</item>
                <item name="mockData" xsi:type="string">Pasarela\Bancomer\Gateway\Request\MockDataRequest</item>
            </argument>
        </arguments>
    </virtualType>
    <type name="Pasarela\Bancomer\Gateway\Request\AuthorizationRequest">
        <arguments>
            <argument name="config" xsi:type="object">BancomerConfig</argument>
        </arguments>
    </type>

    <!-- Capture command -->
    <virtualType name="BancomerCaptureCommand" type="Magento\Payment\Gateway\Command\GatewayCommand">
        <arguments>
            <argument name="requestBuilder" xsi:type="object">Pasarela\Bancomer\Gateway\Request\CaptureRequest</argument>
            <argument name="handler" xsi:type="object">Pasarela\Bancomer\Gateway\Response\TxnIdHandler</argument>
            <argument name="transferFactory" xsi:type="object">Pasarela\Bancomer\Gateway\Http\TransferFactory</argument>
            <argument name="validator" xsi:type="object">Pasarela\Bancomer\Gateway\Validator\ResponseCodeValidator</argument>
            <argument name="client" xsi:type="object">Pasarela\Bancomer\Gateway\Http\Client\ClientMock</argument>
        </arguments>
    </virtualType>

    <!-- Capture Request -->
    <type name="Pasarela\Bancomer\Gateway\Request\CaptureRequest">
        <arguments>
            <argument name="config" xsi:type="object">BancomerConfig</argument>
        </arguments>
    </type>

    <!-- Void command -->
    <virtualType name="BancomerVoidCommand" type="Magento\Payment\Gateway\Command\GatewayCommand">
        <arguments>
            <argument name="requestBuilder" xsi:type="object">Pasarela\Bancomer\Gateway\Request\VoidRequest</argument>
            <argument name="handler" xsi:type="object">Pasarela\Bancomer\Gateway\Response\TxnIdHandler</argument>
            <argument name="transferFactory" xsi:type="object">Pasarela\Bancomer\Gateway\Http\TransferFactory</argument>
            <argument name="validator" xsi:type="object">Pasarela\Bancomer\Gateway\Validator\ResponseCodeValidator</argument>
            <argument name="client" xsi:type="object">Pasarela\Bancomer\Gateway\Http\Client\ClientMock</argument>
        </arguments>
    </virtualType>

    <!-- Void Request -->
    <type name="Pasarela\Bancomer\Gateway\Request\VoidRequest">
        <arguments>
            <argument name="config" xsi:type="object">BancomerConfig</argument>
        </arguments>
    </type>

    <!-- Response handlers -->
    <virtualType name="BancomerResponseHandlerComposite" type="Magento\Payment\Gateway\Response\HandlerChain">
        <arguments>
            <argument name="handlers" xsi:type="array">
                <item name="txnid" xsi:type="string">Pasarela\Bancomer\Gateway\Response\TxnIdHandler</item>
                <item name="fraud" xsi:type="string">Pasarela\Bancomer\Gateway\Response\FraudHandler</item>
            </argument>
        </arguments>
    </virtualType>

    <!-- Value handlers infrastructure -->
    <virtualType name="BancomerValueHandlerPool" type="Magento\Payment\Gateway\Config\ValueHandlerPool">
        <arguments>
            <argument name="handlers" xsi:type="array">
                <item name="default" xsi:type="string">BancomerConfigValueHandler</item>
            </argument>
        </arguments>
    </virtualType>
    <virtualType name="BancomerConfigValueHandler" type="Magento\Payment\Gateway\Config\ConfigValueHandler">
        <arguments>
            <argument name="configInterface" xsi:type="object">BancomerConfig</argument>
        </arguments>
    </virtualType>

    <type name="Pasarela\Bancomer\Block\Info">
        <arguments>
            <argument name="config" xsi:type="object">BancomerConfig</argument>
        </arguments>
    </type>

</config>
