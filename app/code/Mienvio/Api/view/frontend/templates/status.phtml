<div class="block">
    <div class="block-title">
        <strong><?php echo $this->getTitle() ?></strong>
    </div>
    
    <?php if($this->getOrderStatus() == 'canceled'){ ?>
        <div class="block-content">
            <div class="canceled-progress-bar">
                <div class="processed">
                    <?php echo __('Order canceled') ?>
                </div>
            </div>
        </div>
