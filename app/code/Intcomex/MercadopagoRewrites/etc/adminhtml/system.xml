<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="payment">
            <group id="mercadopago_configurations" translate="label" type="text" sortOrder="50" showInDefault="1" showInWebsite="1" showInStore="1">
                <group id="mercadopago_credentials_api" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Credentials Api</label>

                <field id="username_api" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>UserName </label>
                    <config_path>payment/mercadopago/username_api</config_path>
                </field>

                <field id="password_api" translate="label comment" type="text" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Password </label>
                    <config_path>payment/mercadopago/password_api</config_path>                    
                </field>
            </group>
            </group>
        </section>
    </system>
</config>
