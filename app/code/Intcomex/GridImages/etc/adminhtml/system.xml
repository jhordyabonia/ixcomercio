<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <tab id="intcomex_config"  translate="label" sortOrder="10">
            <label>Intcomex</label>
        </tab>
        <section id="catalog" translate="label" sortOrder="130" showInDefault="1" showInWebsite="1" showInStore="1">            
            <label>Catalog</label>
            <tab>intcomex_config</tab> 
            <resource>Intcomex_GridImages::intcomex_catalog_gridimages</resource>
            <group id="general" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Product Grid Image</label>
                <field id="catalog_gridimage" translate="label" type="select" sortOrder="6" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Grid Image Gallery</label>
                    <comment>Habilitar grid en el detalle del producto</comment>
                    <source_model>Intcomex\GridImages\Model\Adminhtml\Config\Settings\Product\GalleryGrid</source_model>
                </field>                
            </group>
        </section>
    </system>
</config>