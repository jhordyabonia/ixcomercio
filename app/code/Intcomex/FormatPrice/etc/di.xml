<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">

    <preference for="Intcomex\FormatPrice\Model\ConfigInterface" type="Intcomex\FormatPrice\Model\Config" />
    <preference for="Magento\Framework\CurrencyInterface" type="Intcomex\FormatPrice\Model\Currency" />

    <type name="Magento\Framework\Pricing\PriceCurrencyInterface">
        <plugin name="intcomex_price_decimal_price_currency" type="Intcomex\FormatPrice\Model\Plugin\PriceCurrency" sortOrder="10" disabled="false"/>
    </type>
    <type name="Magento\Framework\Locale\FormatInterface">
        <plugin name="intcomex_price_decimal_local_format" type="Intcomex\FormatPrice\Model\Plugin\Local\Format" sortOrder="10" disabled="false"/>
    </type>
    <type name="Magento\Sales\Api\Data\OrderInterface">
        <plugin name="intcomex_price_decimal_for_orders" type="Intcomex\FormatPrice\Model\Plugin\OrderPlugin" sortOrder="10" disabled="false"/>
    </type>

    <type name="Magento\Framework\CurrencyInterface">
        <plugin name="intcomex_price_decimal_for_currency" type="Intcomex\FormatPrice\Model\Plugin\Currency" sortOrder="10" disabled="false"/>
    </type>

</config>
